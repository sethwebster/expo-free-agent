{
  "name": "@expo-free-agent/controller",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "expo-controller": "./dist/cli.js"
  },
  "scripts": {
    "start": "bun run src/cli.ts",
    "dev": "bun --watch run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "db:setup": "bun run src/db/setup.ts",
    "test": "bun test src/__tests__",
    "test:integration": "bun test src/__tests__/integration.test.ts",
    "test:e2e": "bun test src/__tests__/e2e.test.ts",
    "deploy": "bun run scripts/deploy.ts",
    "deploy:app": "bun run scripts/deploy.ts -a"
  },
  "dependencies": {
    "fastify": "^4.26.0",
    "@fastify/multipart": "^8.1.0",
    "@fastify/view": "^9.0.0",
    "@fastify/static": "^7.0.1",
    "ejs": "^3.1.9",
    "nanoid": "^5.0.4",
    "adm-zip": "^0.5.10"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/ejs": "^3.1.5",
    "archiver": "^7.0.1",
    "bun-types": "latest"
  }
}
